
#server config 
server.port = 9009
spring.application.name=userShoppingCart-service2


# servlet contenxt path for global request mapping
server.servlet.context-path=/api/userShoppingCart-service2

# eureka config
eureka.client.serviceUrl.defaultZone = http://localhost:9001/eureka

#instance config
eureka.instance.hostname=localhost

#spring data source config
spring.datasource.url=jdbc:mysql://localhost:3306/userShoppingCart-service2
spring.datasource.username=root
spring.datasource.password=Simplilearn

#hibernate config
spring.jpa.hibernate.ddl-auto=updatespring.jpa.properties.hibernate.show_sql=true

